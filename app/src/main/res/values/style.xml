<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavText" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="android:background">@drawable/bottom_navigation_view_background</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/bottom_nav_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TextTitle.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="TextTitle.CreatePlaylist">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">?attr/btnCreatePlaylist</item>
    </style>

    <style name="TextTitle.SearchHistory">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="TextTitle.Time">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTitle.Tab">
        <item name="tabTextColor">?attr/colorOnSecondary</item>
        <item name="tabIndicatorColor">?attr/colorOnSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

    <style name="TextTitle.Weight400">
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TextTitle.Weight400.Artist">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTitle.Weight400.ErrorText">
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextSubtitle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>

    <style name="TextSubtitle.BottomSheetItemTitle">
        <item name="android:textColor">?attr/bottomSheetItemTitle</item>
    </style>

    <style name="TextSubtitle.BottomSheetItemCount">
        <item name="android:textSize">@dimen/bottom_sheet_count_text_size</item>
        <item name="android:textColor">?attr/trackInfoTextColor</item>
    </style>

    <style name="TextSubtitle.PlayerInfo">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/disable_thumb_grey</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="TextSubtitle.PlayerInfo.Value">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="TextSubtitle.SettingsActivity">
        <item name="background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/margin_horizontal</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TextSubtitle.EditTextView">
        <item name="android:background">?attr/editTextBackground</item>
        <item name="android:textColorHint">?attr/editTextColorHint</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="drawableTint">?attr/editTextDrawableTint</item>
        <item name="android:textCursorDrawable">@drawable/blue_cursor</item>
    </style>

    <style name="TextSubtitle.TrackName">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextSubtitle.TrackName.Playlist">
        <item name="android:textSize">@dimen/bottom_nav_text_size</item>
    </style>

    <style name="TextSubtitle.TrackInfo">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/trackInfoTextColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/enable_thumb</item>
        <item name="colorSwitchThumbNormal">@color/disable_thumb_grey</item>
        <item name="android:colorForeground">@color/disable_foreground_grey</item>
    </style>

    <style name="OutlinedTextInputCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke_color</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/text_input_hint_color</item>
        <item name="android:textColorHint">@color/text_input_hint_color</item>
    </style>
</resources>