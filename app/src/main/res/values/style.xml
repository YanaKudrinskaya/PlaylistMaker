<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginTop">@dimen/padding_button</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal</item>
        <item name="android:layout_weight">3</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/dark_primary</item>
    </style>

    <style name="Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="TextTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
    </style>

    <style name="TextSubtitle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>

    <style name="TextTitle.ToolbarTextView">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TextTitle.SearchHistory">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="TextSubtitle.SettingsActivity">
        <item name="background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/margin_horizontal</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TextSubtitle.EditTextView">
        <item name="android:background">?attr/editTextBackground</item>
        <item name="android:textColorHint">?attr/editTextColorHint</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="drawableTint">?attr/editTextDrawableTint</item>
        <item name="android:textCursorDrawable">@drawable/blue_cursor</item>
    </style>

    <style name="TextTitle.ErrorText">
        <item name="android:textSize">19sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/enable_thumb</item>
        <item name="colorSwitchThumbNormal">@color/disable_thumb_grey</item>
        <item name="android:colorForeground">@color/disable_foreground_grey</item>
    </style>

    <style name="TextSubtitle.TrackName">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextSubtitle.TrackInfo">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/trackInfoTextColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>


</resources>