<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/dark_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fillColor">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="EditTextView">
        <item name="android:background">@drawable/rounded_edittext_night</item>
        <item name="android:textColorHint">@color/dark_primary</item>
        <item name="android:textColor">@color/dark_primary</item>
        <item name="drawableTint">@color/dark_primary</item>
    </style>

    <style name="ClearIcon">
        <item name="android:tint">@color/greyIcon</item>
    </style>

</resources>